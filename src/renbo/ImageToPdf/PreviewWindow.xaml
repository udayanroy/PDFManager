<Window x:Class="PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:renbo"
        mc:Ignorable="d"
        Title="PDF Output Preview" Height="700" Width="600">
    <Grid>

        <ListBox x:Name="listBox" IsEnabled="False"   ItemsSource="{Binding Path=Imagelist }"    VirtualizingStackPanel.IsVirtualizing="True"    >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border  BorderBrush="#FF3A3A3A"  >
                        <Image Width="400"  Source="{Binding Path=FullName}"></Image>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
